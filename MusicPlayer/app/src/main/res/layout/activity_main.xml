<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yyy.xxx.musicplayer.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <Button
                android:id="@+id/Music01_StartBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="재생"/>
            <Button
                android:id="@+id/Music01_PausetBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="일시정지"/>
            <Button
                android:id="@+id/Music01_StopBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="정지"/>
            </LinearLayout>
            <TextView
                android:id="@+id/Music01_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/musictitle"
                android:textSize="15dp"
                android:textColor="#3c3c3c"/>
            <SeekBar
                android:id="@+id/Music01_SeekBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/DurationTime01"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/Duration"
                android:textSize="10dp"
                android:textColor="#3c3c3c"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <Button
                android:id="@+id/Music02_StartBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="재생"/>
            <Button
                android:id="@+id/Music02_PausetBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="일시정지"/>
            <Button
                android:id="@+id/Music02_StopBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="정지"/>
                </LinearLayout>
            <TextView
                android:id="@+id/Music02_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/musictitle"
                android:textSize="15dp"
                android:textColor="#3c3c3c"/>
            <SeekBar
                android:id="@+id/Music02_SeekBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/DurationTime02"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/Duration"
                android:textSize="10dp"
                android:textColor="#3c3c3c"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <Button
                android:id="@+id/Music03_StartBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="재생"/>
            <Button
                android:id="@+id/Music03_PausetBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="일시정지"/>
            <Button
                android:id="@+id/Music03_StopBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="정지"/>
                </LinearLayout>
            <TextView
                android:id="@+id/Music03_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/musictitle"
                android:textSize="15dp"
                android:textColor="#3c3c3c"/>
            <SeekBar
                android:id="@+id/Music03_SeekBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/DurationTime03"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/Duration"
                android:textSize="10dp"
                android:textColor="#3c3c3c"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
